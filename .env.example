# OpenSquawk base configuration
BRIDGE_BASE_URL=https://opensquawk.de

# Optional explicit endpoint overrides
BRIDGE_ME_URL=https://opensquawk.de/api/bridge/me
BRIDGE_STATUS_URL=https://opensquawk.de/api/bridge/status

# Telemetry endpoint precedence:
# 1) SERVER_URL
# 2) BRIDGE_TELEMETRY_URL
# 3) BRIDGE_DATA_URL
# 4) BRIDGE_BASE_URL + /api/bridge/data
SERVER_URL=https://opensquawk.de/api/bridge/data
BRIDGE_TELEMETRY_URL=
BRIDGE_DATA_URL=

# Optional bearer token for OpenSquawk API calls
AUTH_TOKEN=

# Local Flask server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
SERVER_DEBUG=false
SERVER_RELOADER=false

# Legacy bridge settings (kept for compatibility/documentation)
ACTIVE_INTERVAL_SEC=30
IDLE_INTERVAL_SEC=120
BRIDGE_IGNORE_SIMCONNECT_LOAD_ERRORS=false
